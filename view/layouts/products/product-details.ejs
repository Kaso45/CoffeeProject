<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 my-4">
      <img
        class="img-fluid rounded mx-auto d-block"
        src="<%= products.image %>"
        alt="Display photo"
      />
    </div>

    <div class="pro-details col-12 col-sm-12 col-md-6 col-lg-6 my-4">
      <h1 class="mb-3"><%= products.name %></h1>
      <div class="pro-price"><%= formatCurrency(products.priceCent) %></div>
      <div class="rating">
        <div class="star"><%- generateStarRating(products.rating) %></div>
        <div class="star-number">(<%= products.rating %>)</div>
      </div>
      <input type="number" value="1" />
      <button type="button" class="btn-coffee">Add To Cart</button>
      <h3 class="py-4 mb-0">Product Details</h3>
      <p><%= products.de %></p>
    </div>
  </div>
</div>
