<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Coffee Corner</title>
	<link rel="icon" type="image/coffeecorner" href="/images/logo.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="/css/general.css">
</head>
<body>
  <!--Thanh dieu huong-->
  <%- include('partials/header') %>

  <!--hinh giao dien-->
  <div class="hero-section text-center py-5" style="background-image: url(/images/menu.png);">
    <div class="container">
      <h1 class="display-4 text-white">Welcome to The Coffee Corner</h1>
      <p class="lead">Enjoy the finest coffee experience</p>
    </div>
  </div>

  <!--san pham ban chay-->
  <section class="py-5">
    <div class="container-fluid">
      <h2 class="mb-4">Best Seller</h2>

      <!--render san pham -->
      <div class="row" id="bestSeller"></div>

      <div class="d-grid gap-2 col-2 mx-auto">
        <button type="button" class="btn btn-secondary">Discover more</button>
      </div>
    </div>
  </section>

  <!--Cong thuc pha che-->
  <section class="py-5">
    <div class="container-fluid text-center">
      <h2 class="mb-4">Explore our brew guides</h2>
      <div class="row">

        <div class="col-12 col-sm-12 col-md-6 col-6">
          <div class="pro-container card mb-4">
            <img src="/images/frappuccino.png" class="card-img-top" alt="Frappuccino Guide">
            <div class="card-body">
              <h5 class="card-title">Frappuccino</h5>
            </div>
          </div>
        </div>

        <div class="col-12 col-sm-12 col-md-6 col-6">
          <div class="pro-container card mb-4">
            <img src="/images/eggcoffee2.png" class="card-img-top" alt="Vietnamese Egg Coffee Guide">
            <div class="card-body">
              <h5 class="card-title">Vietnamese Egg Coffee</h5>
            </div>
          </div>
        </div>
      </div>

      <div class="d-grid gap-2 col-2 mx-auto">
        <a href="/layouts/brewguide/brewguide.html" class="btn btn-secondary">More</a>
      </div>
    </div>
  </section>

  <%- include ('partials/footer') %>

  <script src="/bootstrap/js/bootstrap.bundle.js"></script>
  <script type="module" src="/js/index.js"></script>
</body>
</html>
